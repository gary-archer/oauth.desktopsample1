  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/mustache": "^4.2.5",
    "electron": "^38.1.2",
    "eslint": "^9.35.0",
    "ts-loader": "^9.5.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  }
