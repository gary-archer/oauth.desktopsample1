    "mustache": "^4.2.0",
    "opener": "^1.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.30",
    "electron": "31.6.0",
    "eslint": "^9.10.0",
    "ts-loader": "^9.5.0",
    "tsx": "^4.19.1",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.6.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
